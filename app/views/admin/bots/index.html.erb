<%= render 'admin/header' %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8 pb-24 space-y-8">
  <section class="rounded-xl border border-gray-200 bg-white shadow-sm overflow-hidden">
    <header class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
      <h2 class="text-lg font-semibold text-gray-900">Automation bots</h2>
      <span class="text-sm text-gray-500"><%= @bots.size %> configured</span>
    </header>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50 text-xs uppercase text-gray-500">
          <tr>
            <th class="px-5 py-3 text-left">Name</th>
            <th class="px-5 py-3 text-left">Type</th>
            <th class="px-5 py-3 text-left">Webhook</th>
            <th class="px-5 py-3 text-left">Status</th>
            <th class="px-5 py-3 text-right">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 text-sm text-gray-700">
          <% @bots.each do |bot| %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-5 py-3 font-medium text-gray-900"><%= bot.name %></td>
              <td class="px-5 py-3"><%= bot.bot_type %></td>
              <td class="px-5 py-3 font-mono text-xs"><%= bot.webhook_id.presence || 'â€”' %></td>
              <td class="px-5 py-3">
                <span class="status-dot <%= bot.active? ? 'status-dot--ok' : 'status-dot--warn' %> mr-2"></span>
                <span><%= bot.active? ? 'Active' : 'Inactive' %></span>
              </td>
              <td class="px-5 py-3">
                <div class="flex flex-wrap justify-end gap-2">
                  <%= link_to "View", admin_bot_path(bot), class: "inline-flex items-center rounded-md bg-gray-600 px-3 py-1.5 text-xs font-medium text-white hover:bg-gray-700" %>
                  <% if bot.active? %>
                    <%= button_to "Deactivate", deactivate_admin_bot_path(bot), method: :post, class: "inline-flex items-center rounded-md bg-amber-500 px-3 py-1.5 text-xs font-medium text-white hover:bg-amber-600" %>
                  <% else %>
                    <%= button_to "Activate", activate_admin_bot_path(bot), method: :post, class: "inline-flex items-center rounded-md bg-blue-600 px-3 py-1.5 text-xs font-medium text-white hover:bg-blue-700" %>
                  <% end %>
                  <%= button_to "Delete", admin_bot_path(bot), method: :delete, data: { turbo_confirm: "Delete bot #{bot.name}?" }, class: "inline-flex items-center rounded-md bg-red-600 px-3 py-1.5 text-xs font-medium text-white hover:bg-red-700" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </section>
</div>
