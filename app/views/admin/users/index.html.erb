<%= render 'admin/header' %>
<div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 mt-6 pb-12">

  <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
    <table class="w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/5">Username</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">Role</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">Messages</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">Channels</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/5">Created</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider w-1/5">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @users.each do |user| %>
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-6 py-4 text-sm text-gray-900 font-medium"><%= user.username %></td>
            <td class="px-6 py-4 text-sm">
              <% if user.admin? %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">Admin</span>
              <% else %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">User</span>
              <% end %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-700"><%= user.messages.count %></td>
            <td class="px-6 py-4 text-sm text-gray-700"><%= user.channels.count %></td>
            <td class="px-6 py-4 text-sm text-gray-700"><%= user.created_at.strftime('%Y-%m-%d %H:%M') %></td>
            <td class="px-6 py-4 text-right">
              <%= form_with url: admin_user_path(user), method: :patch, local: true, class: "inline-flex items-center space-x-2" do |f| %>
                <select name="user[role]" class="px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                  <option value="user" <%= 'selected' if user.role == 'user' %>>User</option>
                  <option value="admin" <%= 'selected' if user.role == 'admin' %>>Admin</option>
                </select>
                <button type="submit" class="px-4 py-2 rounded-md bg-blue-600 text-white text-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">Update</button>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
