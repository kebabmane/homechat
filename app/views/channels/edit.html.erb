<div class="flex-1 min-h-0 overflow-y-auto">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow-sm rounded-lg border border-gray-200">
    <div class="px-4 sm:px-6 py-4 sm:py-5 border-b border-gray-200">
      <h1 class="text-xl sm:text-2xl font-bold text-gray-900">Edit Channel</h1>
      <p class="text-gray-600 mt-1 hidden sm:block">Update your channel settings</p>
    </div>

    <%= form_with model: @channel, local: true, class: "p-6 pb-24" do |form| %>
      <% if @channel.errors.any? %>
        <div class="mb-6 bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded">
          <h4 class="font-medium">Please fix the following errors:</h4>
          <ul class="mt-2 list-disc list-inside text-sm">
            <% @channel.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-6 p-6">
        <div>
          <%= form.label :name, "Channel Name", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :name, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "Enter channel name", data: { controller: "focus" } %>
          </div>
        </div>

        <div>
          <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_area :description, rows: 3, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "Describe what this channel is about..." %>
          </div>
        </div>

        <div class="pt-2">
          <%= form.label :channel_type, "Channel Type", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-2 space-y-3">
            <label class="flex items-start">
              <%= form.radio_button :channel_type, "public", class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300" %>
              <span class="ml-3 text-sm">
                <span class="font-medium text-gray-700">Public Channel</span>
                <p class="text-gray-500">Anyone can discover and join this channel</p>
              </span>
            </label>
            <label class="flex items-start">
              <%= form.radio_button :channel_type, "private", class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300" %>
              <span class="ml-3 text-sm">
                <span class="font-medium text-gray-700">Private Channel</span>
                <p class="text-gray-500">Only invited members can join this channel</p>
              </span>
            </label>
          </div>
        </div>

        <% if @channel.private? %>
          <div class="mt-6 border-t border-gray-200 pt-6">
            <h3 class="text-sm font-medium text-gray-700 mb-2">Invite member</h3>
            <%= form_with url: invite_channel_path(@channel), method: :post, local: true, class: "flex space-x-2" do |f| %>
              <%= f.text_field :username, name: :username, placeholder: "username",
                  class: "flex-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
              <%= f.submit "Invite", class: "px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-md" %>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Sticky action bar -->
      <div class="sticky bottom-0 left-0 right-0 bg-gray-50 border-t border-gray-200 -mx-6 mt-0 px-4 sm:px-6 py-3 sm:py-4 flex items-center justify-between rounded-b-lg" style="padding-bottom: env(safe-area-inset-bottom)">
        <%= link_to "Cancel", channel_path(@channel), class: "text-gray-600 hover:text-gray-900 text-sm font-medium" %>
        <div class="flex space-x-3">
          <%= link_to "Delete Channel", channel_path(@channel),
              data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure you want to delete this channel? This action cannot be undone."
              },
              class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium transition duration-150 ease-in-out" %>
          <%= form.submit "Update Channel", class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md text-sm font-medium transition duration-150 ease-in-out" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
