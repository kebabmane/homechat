
<div class="flex flex-col h-full">
  <!-- Sidebar Header -->
  <div class="px-4 py-3 border-b border-white/10">
    <div class="flex items-center justify-between">
      <h2 class="text-lg font-semibold text-white">HomeChat</h2>
      <div class="relative flex items-center space-x-2">
        <!-- Mobile close -->
        <button class="md:hidden text-gray-300 hover:text-white focus:outline-none" data-action="click->sidebar#close" aria-label="Close sidebar">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
        <button class="hidden md:inline text-gray-300 hover:text-white focus:outline-none" data-action="click->sidebar#togglePinned" aria-label="Toggle sidebar" title="Toggle sidebar">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 12a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
            <path fill-rule="evenodd" d="M2 10a2 2 0 114 0 2 2 0 01-4 0zm14 0a2 2 0 11-4 0 2 2 0 014 0z" clip-rule="evenodd"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Channel List -->
  <div class="flex-1 overflow-y-auto">
    <div class="py-2">
      <!-- My Channels Section (public + private memberships) -->
      <div class="mb-4">
        <div class="flex items-center justify-between px-4 py-1 mb-2">
          <h3 class="text-xs font-semibold text-gray-300 uppercase tracking-wide">Channels</h3>
          <%= link_to new_channel_path, class: "text-gray-300 hover:text-white transition-colors", title: "New Channel" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
          <% end %>
        </div>

        <div class="space-y-1">
          <% @sidebar_my_channels.each do |channel| %>
            <%= link_to channel_path(channel),
                class: "flex items-center mx-2 px-3 py-1.5 text-sm text-gray-200 hover:bg-white/10 rounded-md transition-colors group #{'bg-white/10 text-white' if request.path == channel_path(channel)}",
                aria: { current: (request.path == channel_path(channel) ? 'page' : nil) } do %>
              <% if channel.channel_type == 'private' %>
                <svg class="w-4 h-4 text-gray-400 mr-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path></svg>
              <% else %>
                <span class="text-gray-400 mr-2 text-lg">#</span>
              <% end %>
              <span class="flex-1 truncate"><%= channel.name %></span>
            <% end %>
          <% end %>

          <% if @sidebar_my_channels.count == 0 %>
            <div class="text-xs text-gray-300 px-4 py-2">No channels yet</div>
          <% end %>

          <%= link_to channels_path, class: "flex items-center mx-2 px-3 py-1.5 text-xs text-gray-400 hover:text-white transition-colors" do %>
            <span class="mr-2">â‹¯</span>
            <span>Browse all</span>
          <% end %>
        </div>
      </div>

      <!-- Direct Messages Section -->
      <div class="mb-4">
        <div class="flex items-center justify-between px-4 py-1 mb-2">
          <h3 class="text-xs font-semibold text-gray-300 uppercase tracking-wide">Direct messages</h3>
          <%= link_to new_dm_path, class: "text-gray-300 hover:text-white transition-colors", title: "New DM" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
          <% end %>
        </div>

        <div class="space-y-1">
          <% @sidebar_dm_channels.each do |channel| %>
            <%= link_to channel_path(channel),
                class: "flex items-center mx-2 px-3 py-1.5 text-sm text-gray-200 hover:bg-white/10 rounded-md transition-colors group #{'bg-white/10 text-white' if request.path == channel_path(channel)}" do %>
              <span class="text-gray-400 mr-2 text-lg">@</span>
              <span class="flex-1 truncate"><%= channel.name.sub(/^dm-/, '').gsub('-', ' & ') %></span>
            <% end %>
          <% end %>
          <% if @sidebar_dm_channels.blank? %>
            <div class="text-xs text-gray-300 px-4 py-2">No direct messages</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- User Menu -->
  <div class="px-4 py-3 border-t border-white/10">
    <div class="flex items-center space-x-3">
      <div class="flex-shrink-0">
        <%= avatar_for(current_user, size: 'h-7 w-7') %>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-white truncate"><%= current_user.username %></p>
      </div>
      <% if current_user.admin? %>
        <%= link_to admin_dashboard_path, class: "text-gray-300 hover:text-white transition-colors", title: "Admin" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 1.343-3 3s1.343 3 3 3 3-1.343 3-3-1.343-3-3-3zm8.485 3a8.485 8.485 0 11-16.97 0 8.485 8.485 0 0116.97 0z" />
          </svg>
        <% end %>
      <% end %>
      <%= link_to edit_settings_path,
          class: "text-gray-400 hover:text-white transition-colors", title: "Settings" do %>
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path d="M11.983 1.574a1 1 0 00-1.966 0l-.117.702a1 1 0 01-1.516.708l-.625-.36a1 1 0 00-1.366.366l-.5.866a1 1 0 01-.9.5H3a1 1 0 00-1 1v1a1 1 0 001 1h.993a1 1 0 01.9.5l.5.866a1 1 0 001.366.366l.625-.36a1 1 0 011.516.708l.117.702a1 1 0 001.966 0l.117-.702a1 1 0 011.516-.708l.625.36a1 1 0 001.366-.366l.5-.866a1 1 0 01.9-.5H17a1 1 0 001-1v-1a1 1 0 00-1-1h-.993a1 1 0 01-.9-.5l-.5-.866a1 1 0 00-1.366-.366l-.625.36a1 1 0 01-1.516-.708l-.117-.702zM10 13a3 3 0 110-6 3 3 0 010 6z" />
        </svg>
      <% end %>
      <% if ActiveModel::Type::Boolean.new.cast(Setting.fetch(:pwa_enabled, true)) %>
        <a href="#" data-controller="install-trigger" data-action="click->install-trigger#trigger" class="text-gray-400 hover:text-white transition-colors" title="Install app">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v10m0 0l-3.5-3.5M12 14l3.5-3.5M6 20h12" />
          </svg>
        </a>
      <% end %>
      <%= link_to signout_path,
          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to sign out?" },
          class: "text-gray-400 hover:text-white transition-colors" do %>
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z" clip-rule="evenodd"></path>
        </svg>
      <% end %>
    </div>
  </div>
</div>
